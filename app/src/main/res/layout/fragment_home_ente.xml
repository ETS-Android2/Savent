<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical"
         android:layout_marginTop="110dp">
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@drawable/ic_box"
             android:orientation="vertical"
             android:layout_margin="25dp"
             android:padding="20dp"
             android:weightSum="5">

             <ImageView
                 android:id="@+id/imageView2"
                 android:layout_width="100dp"
                 android:layout_height="100dp"
                 android:layout_gravity="center"
                 android:layout_weight="2"
                 android:src="@drawable/cotton_swab" />
             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:gravity="center"
                 android:paddingTop="5dp"
                 android:text="@string/textHomeSwabResult"></TextView>
         </LinearLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@drawable/ic_box"
             android:orientation="vertical"
             android:layout_margin="25dp"
             android:padding="20dp"
             android:weightSum="5">


             <ImageView
                 android:id="@+id/imageCommunities"
                 android:layout_width="100dp"
                 android:layout_height="100dp"
                 android:layout_gravity="center"
                 android:layout_weight="2"
                 android:src="@drawable/communities" />
             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:gravity="center"
                 android:paddingTop="5dp"
                 android:text="@string/textHomeCommunities"></TextView>
         </LinearLayout>
     </LinearLayout>
    </ScrollView>


</RelativeLayout>