<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/nav_bar">



    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|top"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ic_box"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="1dp"
                android:layout_marginTop="20dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:outlineAmbientShadowColor="@color/black"
                    app:cardCornerRadius="75dp"
                    tools:ignore="UnknownId">

                    <ImageView
                        android:id="@+id/imageViewProfile"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:background="@drawable/profile_icon"
                        android:scaleType="centerCrop"/>

                    <View
                        android:id="@+id/view2"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="bottom"
                        android:background="#CCFFFFFF" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:onClick="onCLick"
                        android:text="@string/ModificaImmagineProfilo"
                        android:textColor="#0000FF" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_left_Vertical_profile"
                    android:layout_marginTop="@dimen/margin_size_profile"
                    android:text="@string/Nome"
                    android:textColor="#050505"
                    android:textSize="45px" />

                <EditText
                    android:id="@+id/viewName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="1dp"
                    android:ems="10"
                    android:enabled="false"
                    android:gravity="center"
                    android:inputType="textPersonName"
                    android:singleLine="true"
                    android:text="Vitandrea"
                    android:textColor="#050505" />

                <TextView
                    android:id="@+id/Surname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_left_Vertical_profile"
                    android:layout_marginTop="@dimen/margin_size_profile"
                    android:text="@string/Cognome"
                    android:textColor="#020202"
                    android:textSize="45px" />

                <EditText
                    android:id="@+id/viewSurname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="1dp"
                    android:ems="10"
                    android:enabled="false"
                    android:gravity="center"
                    android:inputType="textPersonName"
                    android:text="Sorino"
                    android:textColor="#050505" />

                <TextView
                    android:id="@+id/DateBirth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_left_Vertical_profile"
                    android:layout_marginTop="@dimen/margin_size_profile"
                    android:text="@string/dataNascita"
                    android:textColor="#040404"
                    android:textSize="45px" />

                <EditText
                    android:id="@+id/viewDateBirth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="1dp"
                    android:ems="10"
                    android:enabled="false"
                    android:gravity="center"
                    android:inputType="textPersonName"
                    android:text="10/05/1996"
                    android:textColor="#020202"
                    android:textColorHint="#020202" />

                <TextView
                    android:id="@+id/textGender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_left_Vertical_profile"
                    android:layout_marginTop="@dimen/margin_size_profile"
                    android:text="@string/Genere"
                    android:textColor="#040404"
                    android:textSize="45px" />

                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <LinearLayout
                        android:id="@+id/linearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/checkBoxMale"
                            android:layout_width="98dp"
                            android:layout_height="wrap_content"
                            android:text="Maschio"
                            android:textColor="#050505" />

                        <CheckBox
                            android:id="@+id/checkBoxFemale"
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:text="Femmina"
                            android:textColor="#020202" />

                        <CheckBox
                            android:id="@+id/checkBoxUndefined"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Non definito"
                            android:textColor="#050505" />

                    </LinearLayout>
                </RadioGroup>

                <TextView
                    android:id="@+id/Telephone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_left_Vertical_profile"
                    android:layout_marginTop="@dimen/margin_size_profile"
                    android:text="Phone:"
                    android:textColor="#020202"
                    android:textSize="45px" />

                <EditText
                    android:id="@+id/viewTelephone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="1dp"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="textPersonName"
                    android:text="3289743124"
                    android:textColor="#050505" />

                <Button
                    android:id="@+id/buttonSaveData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/ic_button_shape"
                    android:backgroundTint="@color/blueButton"
                    android:gravity="center"
                    android:text="@string/salvaModifiche" />

                <TextView
                    android:id="@+id/textChangeData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"
                    android:text="@string/cambiaCredenziali"
                    android:textColor="@color/blueButton"
                    android:textSize="40px"
                    android:layout_marginBottom="40dp"/>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>





</RelativeLayout>